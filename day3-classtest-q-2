#include <stdio.h>
int main() {
   int arr[] = {1, 2, 3, 4, 5, 6};
   int n = sizeof(arr) / sizeof(arr[0]);
   int x = 3; 
   int i;
   int a= 0;

   printf("Positions of element %d in array:\n", x);

   for (i = 0; i < n; i++) 
   {
      if (arr[i] == x) 
      { 
         printf("%d ", i); 
         a = 1; 
      }
   }

   if (a) 
   {
      printf("\nElement %d found in array!\n", x);
   } 
   else 
   {
      printf("\nElement %d not found in array.\n", x);
   }

   return 0;
}
   
